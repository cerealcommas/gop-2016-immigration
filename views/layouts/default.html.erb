	<script>try{Typekit.load();}catch(e){}</script>
	
	<header>
		<%= render "header" %>
	</header>
	
	<section role="main">
		<article><%= yield %></article>
	</section>
	
	<footer>
		<%= render "footer" %>
	</footer>
</body>
</html>