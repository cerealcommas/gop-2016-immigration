	<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
	<link rel="stylesheet" href="stylesheets/swiper.min.css">

	<!-- Twitter card meta tags -->
	<meta name="twitter:card" content="summary_large_image" />
	<meta name="twitter:site" content="<%= @org_twitter %>" />
	<meta name="twitter:creator" content="<%= @org_twitter %>">
	<meta name="twitter:title" content="<%= @hed %>" />
	<meta name="twitter:description" content="<%= @guff %>">
	<meta name="twitter:image" content="images/header.jpg" />

	<link rel="shortcut icon" href="//mashable.com/favicon.ico" />
